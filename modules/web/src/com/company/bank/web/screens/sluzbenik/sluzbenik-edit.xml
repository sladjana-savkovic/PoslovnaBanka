<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://sluzbenikEdit.caption"
        focusComponent="form"
        messagesPack="com.company.bank.web.screens.sluzbenik">
    <data>
        <instance id="sluzbenikDc"
                    class="com.company.bank.entity.Sluzbenik" > 
            <view   extends="_local"><property name="banka" view="_minimal"/></view>
            <loader/>
        </instance>
        
    </data>
    
    <dialogMode height="600"
                width="800"/>
<layout expand="scrollBox" spacing="true">
    <scrollBox id="scrollBox" spacing="true">
        

<form id="form" dataContainer="sluzbenikDc">
<column width="350px">
	
	<textField id="loginField" property="login"/>
	
	<textField id="nameField" property="name"/>
	
	<textField id="firstNameField" property="firstName"/>
	
	<textField id="lastNameField" property="lastName"/>
	
	<textField id="middleNameField" property="middleName"/>
	
	<textField id="positionField" property="position"/>
	
	<textField id="emailField" property="email"/>
	
	<textField id="languageField" property="language"/>
	
	<textField id="timeZoneField" property="timeZone"/>
	
	<checkBox id="timeZoneAutoField" property="timeZoneAuto"/>
	
	<checkBox id="activeField" property="active"/>
	
	<checkBox id="changePasswordAtNextLogonField" property="changePasswordAtNextLogon"/>
	
	<textField id="groupNamesField" property="groupNames"/>
	
	<textField id="ipMaskField" property="ipMask"/>
	
	<textField id="imeField" property="ime"/>
	
	<textField id="prezimeField" property="prezime"/>
	
	<textField id="jmbgField" property="jmbg"/>
	
	<textField id="telefonField" property="telefon"/>
	
	<pickerField id="bankaField" property="banka">
		<actions><action id="lookup" type="picker_lookup"/><action id="clear" type="picker_clear"/></actions>
	</pickerField>
	
</column>
</form>

        
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
